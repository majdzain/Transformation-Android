<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/darker_purple</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AppThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/darker_purple</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="PrepaidButton" parent="Theme.AppCompat.Light">

        <item name="colorControlHighlight">@color/orange</item>
    </style>
    <style name="CancelButton" parent="Theme.AppCompat.Light">

        <item name="colorControlHighlight">@color/red</item>
    </style>
    <style name="PostpaidButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/light_green</item>
    </style>

    <style name="RecordButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="SaveButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/purple</item>
    </style>

    <style name="ExistVersionButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/blue</item>
    </style>

    <style name="TypeButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/darker_orange</item>
    </style>

    <style name="InventoryButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/darker_red</item>
    </style>

    <style name="TransformBackupButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/darker_blue</item>
    </style>
    <style name="CustomerBackupButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/darker_green</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem" />

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem" >
        <item name="android:gravity">center</item>
    </style>


    <style name="TextLabel1" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/purple</item>
        <item name="colorControlNormal">@color/purple</item>
        <item name="colorControlActivated">@color/purple</item>
    </style>
    <style name="TextLabel2" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/red</item>
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/red</item>
    </style>
    <style name="TextLabel3" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/yellow</item>
        <item name="colorControlNormal">@color/yellow</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>
    <style name="BlackCheck">
        <item name="colorAccent">@color/spec_black</item>
    </style>
</resources>
